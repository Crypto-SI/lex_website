{
  "name": "lex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "node scripts/dev-restart.js",
    "build": "next build",
    "build:no-lint": "ESLINT_NO_DEV_ERRORS=true TYPESCRIPT_NO_BUILD_ERRORS=true next build",
    "build:strict": "ESLINT_NO_DEV_ERRORS=false TYPESCRIPT_NO_BUILD_ERRORS=false next build",
    "start": "next start",
    "lint": "next lint --dir src",
    "lint:fix": "next lint --dir src --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "analyze": "node scripts/analyze-bundle.js",
    "build:analyze": "npm run analyze && npm run build:no-lint",
    "clean": "rm -rf .next out dist",
    "prebuild": "npm run clean",
    "build:safe": "ESLINT_NO_DEV_ERRORS=true TYPESCRIPT_NO_BUILD_ERRORS=true next build",
    "type-check:build": "tsc --project tsconfig.build.json --noEmit",
    "prebuild:safe": "node scripts/fix-build-errors.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:accessibility": "vitest run --reporter=verbose src/**/*.a11y.test.*",
    "test:performance": "vitest run --reporter=verbose src/**/*performance.test.*",
    "test:visual": "playwright test src/test/visual",
    "test:cross-browser": "playwright test src/test/compatibility",
    "test:lighthouse": "vitest run src/test/performance/lighthouse-audit.test.ts",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:accessibility && npm run test:performance && npm run test:visual",
    "test:comprehensive": "node scripts/run-all-tests.js",
    "perf:monitor": "node scripts/performance-monitor.js",
    "perf:analyze": "node scripts/analyze-bundle.js",
    "perf:report": "npm run perf:analyze && npm run perf:monitor",
    "docker:dev": "docker-compose up --build web-dev",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod-nginx": "docker-compose -f docker-compose.prod.yml --profile nginx up --build",
    "deploy:dev": "bash scripts/deploy.sh development",
    "deploy:prod": "bash scripts/deploy.sh production",
    "deploy:prod-nginx": "bash scripts/deploy.sh production-nginx",
    "health-check": "bash scripts/health-check.sh",
    "health-check:dev": "bash scripts/health-check.sh 3002",
    "health-check:prod": "bash scripts/health-check.sh 80"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.15.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "framer-motion": "^12.6.3",
    "gsap": "^3.14.2",
    "next": "15.2.8",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/puppeteer": "^5.4.7",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.0.2",
    "axe-core": "^4.10.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.6",
    "jest": "^30.1.1",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^30.1.1",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "playwright": "^1.55.0",
    "puppeteer": "^24.17.1",
    "typescript": "^5",
    "vitest": "^3.2.4",
    "web-vitals": "^5.1.0"
  }
}
